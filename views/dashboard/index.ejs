<!DOCTYPE html>
<html :class="{ 'theme-dark': dark }" x-data="data()" lang="en">
  <head>


    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Login | legatoex - cryptocurrency exchange</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
    rel="stylesheet"/>
    <link rel="stylesheet" href="/assets/css/tailwind.output.css" />
    <script
    src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
    defer
    ></script>
    <script src="/assets/js/init-alpine.js"></script>
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css"
    />
    <script
    src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"
    defer
    ></script>
    <script src="/assets/js/charts-lines.js" defer></script>
    <script src="/assets/js/charts-pie.js" defer></script>
  </head>
  <body>
    <div class="flex h-screen bg-gray-50 dark:bg-gray-900"
      :class="{ 'overflow-hidden': isSideMenuOpen }">
        <%- include('../components/sidenav') %>
        <div class="flex flex-col flex-1 w-full">
          <%- include('../components/top') %>
          <%- include('../components/wallets-header') %>




        </div>
    </div>
    <script type="text/javascript">
      console.log('hello')

      $(document).ready(() => {
        $.getJSON('/user', (data, status) => {
          for (let k in data.wallet) {
            $(`#${k} .amount`).text(`${data.wallet[k].balance}`) // update the wallet withe the baalance
            $(`#${k} .address`).text(`${data.wallet[k].address.slice(0,15)}...`)  // update the wallet with the address
            // console.log(data)
          }
          $.getJSON(`/offers/user/id/${data.id}`, (data, status) => {
            data.forEach(data => {
              let tr = $('.tbody').append(`
              <tr class="text-gray-700 dark:text-gray-400">
                <td class="td px-4 py-3">
                  <div class="flex items-center text-sm">
                    <div>
                      <p class="font-semibold">${data.accepting}</p>
                    </div>
                  </div>
                </td>
                <td class="td px-4 py-3">
                  <div class="flex items-center text-sm">
                    <div>
                      <p class="font-semibold">${data.exchanging}</p>
                    </div>
                  </div>
                </td>
                <td class="td px-4 py-3">
                  <div class="flex items-center text-sm">
                    <div>
                      <p class="font-semibold">${data.min}</p>
                    </div>
                  </div>
                </td>
                <td class="td px-4 py-3">
                  <div class="flex items-center text-sm">
                    <div>
                      <p class="font-semibold">${data.max}</p>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-3 t">
                  <p class="text-xs text-gray-600 dark:text-gray-400">
                    ${data.quote}
                  </p>
                </td>
                <td class="action px-4 py-3">
                  <div class="action-buttons flex items-center space-x-4 text-sm">

                    <button id="delete-btn"
                      class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray"
                      aria-label="Delete"
                    >
                      <svg
                        class="w-5 h-5"
                        aria-hidden="true"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z"
                          clip-rule="evenodd"
                        ></path>
                      </svg>
                    </button>
                  </div>
                </td>
              </div>
                `)
              let deleteBtn = $('#delete-btn').on('click', async () => {
                $.ajax('/')
              })

            })
          })
        })
      })
    </script>
  </body>
</html>
